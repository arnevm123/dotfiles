[user]
	email = arnevanmaele@gmail.com
	name = Arne Van Maele

[core]
	hooksPath = ~/.githooks
	excludesfile = /home/arne/.gitignore_global

[url "ssh://git@gitlab.telecom-it.be/"]
      insteadOf = https://unmatched.eu/internal/

[url "ssh://git@gitlab.telecom-it.be/"]
      insteadOf = https://gitlab.telecom-it.be/

[safe]
	directory = /opt/keyd
	directory = *
[init]
	defaultBranch = main
[pull]
	rebase = true

[diff]
	tool = difftastic

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true

[alias]
	dft = difftool

[credential "https://github.com"]
	useHttpPath = true

[includeIf "gitdir:~/Projects/"]
    path = .gitconfig-work

[includeIf "gitdir:~/allproject/"]
    path = .gitconfig-work

[includeIf "gitdir:~/Personal/"]
    path = .gitconfig-personal

[includeIf "gitdir:~/Tools/"]
    path = .gitconfig-personal

[merge]
	conflictstyle = diff3
[rerere]
	enabled = true
